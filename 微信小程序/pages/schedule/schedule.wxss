/* pages/schedule/schedule.wxss */
@import"../../templates/nav.wxss"; 
page{  
  display: flex;  
  flex-direction: column;  
  height: 100%;  
  width: 100%;
  box-sizing: border-box;
  padding-top:33rpx; 
}  
.search_bar{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 70rpx;
  align-items:center; 
  margin-bottom:25rpx;
  margin-left: 50rpx;
}
.search{
  width: 70%;
  height: 70rpx;
  border-radius: 80rpx;
  margin-right: 35rpx;
  border:2px solid #909090;
}
.more{
  height: 80%;
  width: 8%;
}
.navBar{
    height: 80rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
    margin-left: 40rpx;
}
.navItem{
  margin-right: 15rpx;
  width: 17%;
  height: 60rpx;
  text-align: center;
  box-shadow: 3rpx 3rpx 12rpx #f0f0f0;
  border-radius: 170rpx;
  font-size: 25rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.navItem.active{
  color: white;
  background-color: #eeb478;
}