.im{
  height: 125rpx;
  box-shadow:  6rpx 6rpx 70rpx #f0f0f0;  
  display: flex;
  flex-direction: column;
  border-radius: 20rpx;
  margin: 0rpx 40rpx;
  padding: 8rpx;
  margin-bottom: 20rpx;
}
.im .im_title{
  font-size: 24rpx;
  color: #eeb478;
}
.im .im_title1{
  font-size: 24rpx;
  color: #27a20a;
}
.im .im_bar{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.im_bar .im_bar_statusBar{
  display: flex;
  flex-direction: row;
  width: 70%;
}
.im_bar_statusBar .im_statusBar{
  display: flex;
  flex-direction: row;
  height: 70rpx;
  margin-right: 30rpx;
}
.im_statusBar .im_status{
  background-color: #f2c597;
  width: 35rpx;
  height: 35rpx;
  border-radius: 100%;
  border:8rpx solid #f4d7b8;
  margin-top: 10rpx;
}
.im_statusBar .im_status1{
  background-color: white;
  box-shadow:  1rpx 1rpx 34rpx #f0f0f0;
  border:8rpx solid white;  
  width: 35rpx;
  height: 35rpx;
  border-radius: 100%;
  margin-top: 10rpx;
}
.im_statusBar .im_time{
  font-size: 25rpx;
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}
.im_statusBar .im_title{
  font-size: 25rpx;
  align-items: center;
  margin-left: 20rpx;
  display:block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  width: 30%;
}
.im_statusBar .im_teacher{
  font-size: 20rpx;
  margin-bottom: 20rpx;
  display:block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  width: 20%;
}
.im_bar_statusBar .im_class{
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
  align-items: center;
  width: 42%;
}
.im_class .im_class_name{
  font-size: 25rpx;
  margin-bottom: 10rpx;
}
.im_class .im_class_teacher{
  font-size: 20rpx;
  margin-bottom: 20rpx;
}
.im_bar .im_ka{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-left: 30rpx;
  margin-right: 20rpx;
}
.im_bar .im_ka1{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-left: -10rpx;
  margin-right: 20rpx;
}
.im_ka .im_ka_btn{
  width: 190rpx;
  height: 60rpx;
  background-color:grey;
  border-radius: 50rpx;
  font-size: 25rpx;
  color: white; 
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
}
.im_ka .im_ka_btn1{
  width: 190rpx;
  height: 60rpx;
  background-color:#eeb478;
  border-radius: 50rpx;
  font-size: 25rpx;
  color: white; 
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 10rpx;
}
