@import"../onlinevedio/onlinevedio.wxss"; 
page{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.uc_img{
  width: 100%;
  height: 290rpx;
}
.uc_content{
  display: flex;
  flex-direction: column;
  padding: 20rpx 44rpx;
  padding-bottom: 150rpx;
}
.uc_content .uc_title{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 60rpx;
  align-items: center;
}
.uc_title .title{
  font-size: 37rpx;
  font-weight: bold;
}
.uc_title .number{
  width: 138rpx;
  height: 42rpx;
  font-size: 23rpx;
  color: white;
  background-color: #eeb478;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 30rpx;
  margin-left: 30rpx;
}
.uc_content .content_txt{
  font-size: 27rpx;
  color: grey;
  margin-bottom: 20rpx;
}
.uc_content .choose{
  display: flex;
  flex-direction: row;
  margin-bottom: 50rpx;
  margin-top: 20rpx;
}
.choose .choose_status.active{
  width: 200rpx;
  height: 60rpx;
  font-size: 30rpx;
  color: white;
  background-color: #eeb478;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 30rpx;
  margin-right: 30rpx;
}
.choose .choose_status{
  width: 200rpx;
  height: 60rpx;
  font-size: 30rpx;
  color:grey;
  box-shadow: 6rpx 6rpx 72rpx #f0f0f0;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 30rpx;
  margin-right: 30rpx;
}
.uc_content .detail{
  display: flex;
  flex-direction: column;
}
.detail .detail_txt{
  font-size: 28rpx;
  margin-bottom: 15rpx;
}
.detail .detail_img_box{
  width: 100%;
  display: flex;
  justify-content: center;
  margin: 20rpx 0;
}
.detail_img_box .detail_img{
  width: 70%;
  height: 200rpx;
}
.join{
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  background-color: #eeb478;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
}
.join1{
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  background-color: gray;
  color: black;
  display: flex;
  justify-content: center;
  align-items: center;
}