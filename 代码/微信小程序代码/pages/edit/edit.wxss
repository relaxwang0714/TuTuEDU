/* pages/edit/edit.wxss */
page{
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  margin: 50rpx;
}
.top{
  display: flex;
  flex-direction: column;
  position: relative;
}
.top .title_pic{
  display: flex;
  flex-direction: row
}
.title_pic .pick{
  width: 80rpx;
  height: 70rpx;
  position: absolute;
  right: 120rpx;
  top:0rpx;
}
.pic_box{
  width:100%;
  height: 230rpx;
}
.pic_box .pic_show{
  width: 28%;
  height: 100%;
  margin-right: 10rpx;
}
.fabiao_box{
  width: 100%;
  height: 100rpx;
  background-color: #eeb478;
  color: white;
  font-size: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  bottom: 0;
  left: 0;
}
.fabiao_box .fabiao{
  text-align: center;
}