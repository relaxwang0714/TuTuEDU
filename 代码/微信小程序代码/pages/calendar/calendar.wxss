/* pages/calendar/calendar.wxss */
 @import"../../components/scheduleList/scheduleList.wxss"; 
page{
  width: 100%;
  height: 100%;
}
.calendar_box{
  display: flex;
  flex-direction: column;
  background-color: #eeb478;
}
.calendar_box .calendar_adds{
  display: flex;
  justify-content: flex-end; 
}
.calendar_adds .calendar_add{
  width: 45rpx;
  height: 45rpx;
  margin-top: 30rpx;
  margin-right: 55rpx;
}
.calendar_box .calendar{
  display: flex;
  flex-direction: row;
  padding-left: 35rpx;
  padding-bottom: 35rpx;
}
.calendar .calendar_month{
  color: white;
  font-size: 44rpx;
  margin-right: 35rpx;
}
.calendar .calendar_week{
  display: flex;
  flex-direction: column;
  color: white;
  font-size: 32rpx;
}
.dateOn{
  border-radius: 100%;
  background-color:white;
  color:#eeb478;
  margin-right:38rpx;
  width:45rpx;
  height:45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.dateOff{
  margin-right:33rpx;
  width:45rpx;
  height:45rpx;
   display: flex;
  align-items: center;
  justify-content: center;
}
.containers{
  display: flex;
  flex-direction: column;
}
.containers .item{
  height: 130rpx;
  box-shadow:  6rpx 6rpx 70rpx #f0f0f0;    
  display: flex;
  flex-direction: row;
  border-radius: 20rpx;
  margin: 40rpx;
  padding: 20rpx;
  justify-content: space-between;
}
.item .item_bar{
  display: flex;
  flex-direction: column;
}
.item_bar .item_title{
  color: #0d34a4;
  font-size: 24rpx;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}
.item_bar .item_flag{
  display: flex;
  flex-direction: row;
}
.item_flag .item_flag_txt{
  font-size: 28rpx;
  margin-right: 10rpx;
}
.item_flag .item_flag_img{
  width: 30rpx;
  height: 35rpx;
}
.item .item_ka{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.item_ka .item_ka_btn{
  width: 200rpx;
  height: 65rpx;
  background-color:#eeb478;
  border-radius: 50rpx;
  font-size: 30rpx;
  color: white; 
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}
.item_ka .item_ka_btn1{
  width: 200rpx;
  height: 65rpx;
  background-color:grey;
  border-radius: 50rpx;
  font-size: 30rpx;
  color: white; 
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}
.item_ka .item_ka_txt{
  font-size: 23rpx;
  color: grey;
}
.modifyBoxs{
  width: 100%;
  height: 100%;
  position: absolute;
  top:0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  background: rgba(0, 0, 0, 0.4);
}
.modifyBoxs .modifyBox{
  position: absolute;
  /* top: 400rpx;
  left: 150rpx; */
  width: 70%;
  height: 300rpx;
  background:#f0c9a1;
  transform: translateY(100%) translateX(23%);
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
}
.modifyBox .flag_txt{
  color: #e66611;
  font-size: 30rpx;
  margin:20rpx 20rpx;
  margin-top: 30rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.modifyBox .flag_input{
  background-color: white;
  margin:0rpx 20rpx;
  padding: 10rpx;
  font-size: 30rpx;
}
.modifyBox .ModifyBox{
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  position: absolute;
  bottom: 0;
}
.ModifyBox .sure{
  width: 50%;
  height: 100%;
  color: #e66611;
  box-shadow: 0px 0px 1px 1px gainsboro;
  border-bottom-left-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.ModifyBox .cancle{
  width: 50%;
  height: 100%;
  color: grey;
  box-shadow: 0px 0px 1px 1px gainsboro;
  border-bottom-right-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}