/* pages/talk/talk.wxss */
page{
  width: 100%;
}

.bar{
  width:100%;
  height:120rpx;
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0;
  border-top:2rpx solid #f0f0f0; 
  background: white; 
}
.bar .box_content{
  width: 100%;
  display: flex;
  flex-direction: row;
}
.box_content .box{
  width: 25%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center; 
}
.box .box_img{
  width: 40rpx;
  height: 35rpx;
}
.box .box_txt{
  margin-left: 20rpx;
  font-size: 30rpx;
  text-align: center;
}
.bar .comment_box{
  display:flex;
  flex-direction:row;
  width:100%;
  height: 100%;
  justify-content: center;
  align-items: center; 
}
.comment_box .comment{
  width:75%;
  height: 50%;
  padding: 10rpx;
  margin-bottom: 30rpx;
  border-radius: 20rpx;
  background-color: white;
  box-shadow: 6rpx 6rpx 72rpx #f0f0f0;
  margin-top: 25rpx;
}
.comment_box .go{
  color: grey;
  margin-left: 20rpx;
}
.content{
  display: flex;
  flex-direction: column;
  padding-bottom:140rpx;
}
.content .content_top{
  margin: 40rpx;
  display: flex;
  flex-direction: column;
}
.content_top .team{
  font-size: 32rpx;
}
.content_top .title{
  font-size: 40rpx;
  font-weight: bold;
}
.user_bar{
  display: flex;
  flex-direction: row;
  box-shadow: 6rpx 6rpx 6rpx #f0f0f0;
}
.user_bar .user_img{
  width: 105rpx;
  height: 105rpx;
  margin: 20rpx;
}
.user_bar .user_detail{
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.user_bar .user_name{
  font-weight: bold;
}
.user_bar .user_time{
  font-size: 30rpx;
  margin-left: 150rpx;
  margin-top: 40rpx;
  color: gray;
}
.content_article{
  margin-left: 40rpx;
  margin-right: 40rpx; 
}
.content .msg{
 display: flex;
 flex-direction: row;
 margin-left: 40rpx;
 margin-right: 40rpx; 
}
.msg .msg_left{
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  align-items: center;
  justify-content: center;
}
.msg_left .msg_img{
  width: 95rpx;
  height: 95rpx;
}
.msg_left .msg_name{
  font-size: 30rpx;
}
.msg .msg_right{
  display: flex;
  flex-direction: column;
  box-shadow: 6rpx 6rpx 12rpx #f0f0f0;
  padding: 20rpx;
  width: 100%;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
}
.msg_right .msg_response{
  font-size: 30rpx;
}
.msg_right .msg_time{
  display: flex;
  flex-direction: row;
  margin-left: 260rpx;
}
.msg_time .msg_time_color{
  color: #909090;
  font-size: 30rpx;
  display: flex;
  align-items: center;
}