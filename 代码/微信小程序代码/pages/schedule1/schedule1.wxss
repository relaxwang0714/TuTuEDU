/* pages/schedule/schedule.wxss */
@import"../../templates/nav.wxss"; 
page{  
  display: flex;  
  flex-direction: column;  
  height: 100%;  
  width: 100%;
  box-sizing: border-box;
  padding-top:33rpx; 
}  
.search_bar{
  display: flex;
  justify-content: center;
  width: 100%;
  margin-bottom: 20rpx;
}
.search_bar .search{
  width: 90%;
  height: 70rpx;
  border-radius: 80rpx;
  border:2px solid #909090;
}
.navBar{
    height: 80rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
    margin-left: 40rpx;
    margin-bottom: 24rpx;
}
.navItem{
  margin-right: 15rpx;
  width: 17%;
  height: 60rpx;
  text-align: center;
  box-shadow: 3rpx 3rpx 12rpx #f0f0f0;
  border-radius: 170rpx;
  font-size: 25rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.navItem.active{
  color: white;
  background-color: #eeb478;
}
.zhibo_list{
  display: flex;
  flex-direction: column;
  box-shadow:  6rpx 6rpx 70rpx #f0f0f0;   
  padding: 20rpx;
}
.zhibo_list .zhibo{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 40rpx;
  margin-top: 20rpx;
}
.zhibo .zhibo_attention{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.zhibo_attention .attention{
  font-size: 38rpx;
}
.zhibo_attention .number{
  font-size: 28rpx;
  color: grey;
}
.zhibo .go{
  width: 25rpx;
  height: 45rpx;
}
.zhibo_list .zhibo_detail{
  display: flex;
  flex-direction: row;
}
.zhibo_detail .zhibo_teacher{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 10rpx;
}
.zhibo_teacher .teacher_pic{
  width: 60rpx;
  height: 60rpx;
}
.zhibo_teacher .teacher{
  display: flex;
  flex-direction: column;
  margin-left: 15rpx;
}
.teacher .teacher_name{
  font-size: 20rpx;
}
.teacher .teacher_course{
  font-size: 25rpx;
}